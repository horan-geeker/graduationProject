@model IEnumerable<MVC4.Models.Admin>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-header">
        <h2>
            管理员列表
        </h2>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>用户名</th>
                <th>密码</th>
                <th>创建时间</th>
                <th style="width:200px;" class="text-center">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.id</td>
                    <td>@user.username</td>
                    <td>@user.password</td>
                    <td>@user.created_at</td>
                    <td class="text-center">
                        @*<a class="btn btn-success btn-xs" href="/User/Show/@user.id">
                                <i class="fa fa-book fa-fw"></i>
                                查看
                            </a>
                        *@
                        <a class="btn btn-primary btn-xs btn-edit"
                           href="/Admin/Edit/@user.id">
                            <i class="fa fa-edit fa-fw"></i>
                            编辑
                        </a>

                        @if (Session["Admin"].ToString() != user.username)
                        {
                            <button class="btn btn-danger btn-xs btn-delete"
                                    data-url="/Admin/Delete/@user.id">
                                <i class="fa fa-trash fa-fw"></i>
                                删除
                            </button>
                        }
                        
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
