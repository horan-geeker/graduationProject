@model IEnumerable<MVC4.Models.Questionnaire>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-header">
        <h2>
            问卷列表
        </h2>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>标题</th>
                <th>内容</th>
                <th style="width:100px;">截至时间</th>
                <th style="width:80px;">问卷类型</th>
                <th style="width:200px;" class="text-center">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var que in Model)
            {
                <tr>
                    <td>@que.id</td>
                    <td>@que.title</td>
                    <td>@que.direction</td>
                    <td>@que.end_at</td>
                    <td>@que.type</td>
                    <td class="text-center">
                        <a class="btn btn-success btn-xs" href="/Questionnaire/Show/@que.id">
                            <i class="fa fa-book fa-fw"></i>
                            查看
                        </a>
                        <a href="/Answer/Statistics/@que.id" class="btn btn-warning btn-xs">
                            <i class="fa fa-area-chart" aria-hidden="true"></i>
                            统计
                        </a>
                        <button class="btn btn-danger btn-xs btn-delete"
                                data-url="/Questionnaire/Delete/@que.id">
                            <i class="fa fa-trash fa-fw"></i>
                            删除
                        </button>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

