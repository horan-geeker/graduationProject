@model IEnumerable<MVC4.Models.User>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-header">
        <h2>
            成员管理
        </h2>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>用户名</th>
                <th>密码</th>
                <th>性别</th>
                <th>最后签到IP</th>
                <th>最后签到时间</th>
                <th>创建时间</th>
                <th style="width:200px;" class="text-center">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.id</td>
                    <td>@user.username</td>
                    <td>@user.password</td>
                    <td>
                        @if (user.gender == "1")
                    {
                        @:男
                        }
                    else
                    {
                        @:女
                        }
                </td>
                <td>@user.last_login_ip</td>
                <td>
                    @if (user.last_login_time == "0")
                {
                    @:无签到记录
                    }
                else
                {
                    @user.last_login_time
                }
            </td>
            <td>@user.created_at</td>
            <td class="text-center">
                @*<a class="btn btn-success btn-xs" href="/User/Show/@user.id">
                        <i class="fa fa-book fa-fw"></i>
                        查看
                    </a>
                *@
                <a class="btn btn-primary btn-xs btn-edit"
                   href="/User/Edit/@user.id">
                    <i class="fa fa-edit fa-fw"></i>
                    编辑
                </a>

                <button class="btn btn-danger btn-xs btn-delete"
                        data-url="/User/Delete/@user.id">
                    <i class="fa fa-trash fa-fw"></i>
                    删除
                </button>
            </td>

        </tr>
            }
        </tbody>
    </table>
</div>