<div class="row">
    <div class="col-xs-12 col-md-10 col-lg-8">
        <!-- BEGIN PAGE HEADER -->
        <div class="clearfix">
            <h3 class="page-title pull-left">
                <a class="a-unstyled" href="/admin/admins">
                    <i class="icon-arrow-left-circle"></i>
                </a>
                问卷详情
            </h3>
        </div>
        <!-- END PAGE HEADER -->
    </div>

    <div class="col-xs-12 col-md-10 col-lg-8">
        <!-- BEGIN PAGE CONTENT-->
        <div><h4>问卷标题:<span>@ViewBag.que.title</span></h4></div>

        <div><h4>问卷摘要:<span>@ViewBag.que.direction</span></h4></div>

        <div>问卷答案收集</div>

        <table class="table text-center">
            <thead>
                <tr><td>姓名</td><td>问题</td><td>答案</td></tr>
            </thead>

            @foreach (var question in ViewBag.que.questions)
            {
                foreach (var answer in question.answers)
                {
                    <tr>
                        <td>@answer.user.username</td>
                        <td>@question.question_content</td>
                        <td>
                            @answer.content
                        </td>
                    </tr>
                }

            }
        </table>
        <div>问卷答案分析</div>
        <div class="row">
            @foreach (var question in ViewBag.que.questions)
            {
                if(question.type_id == 1)
                {
                    <div class="answer_chart col-md-6" data-id="@question.id" style="width: 600px;height:400px;"></div>
                }
            }
        </div>
    
        
        <!-- END PAGE CONTENT-->
    </div>
</div>