
@{
    ViewBag.Title = "MeetDetail";
}

@{ 
    Layout = null;
}

<!DOCTYPE HTML>

<html>
<head>
    <title>培训会议签到</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="../../Content/main.css" />

</head>
<body>
    @if (Session["flash_error_message"] != null)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
            @Session["flash_error_message"]
        </div>
        {
            Session["flash_error_message"] = null;
        }
    }
    <!-- Page Wrapper -->
    <div id="page-wrapper">
        <!-- Banner -->
        <section id="banner">
            <div class="inner">
                <h2>Welcome<br />@ViewBag.meet.title</h2>
                <p>@ViewBag.meet.description</p>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <a class="btn btn-danger btn-block" href="/Signin/Signout/@ViewBag.meet.id">注&emsp;销</a>
                        <a class="btn btn-success btn-block" href="/Questionnaire/Show/@ViewBag.questionnaire.id">问卷调查</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

</body>
</html>