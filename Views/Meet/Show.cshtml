@model IEnumerable<MVC4.Models.Meet>
@{
    ViewBag.Title = "Show";
    int siginCount = 0;
    int unsiginCount = 0;
}

<div class="row">
    <div class="col-xs-12 col-md-10 col-lg-8">
        <!-- BEGIN PAGE HEADER -->
        <div class="clearfix">
            <h3 class="page-title pull-left">
                <a class="a-unstyled" href="/admin/admins">
                    <i class="icon-arrow-left-circle"></i>
                </a>
                会议详情
            </h3>
        </div>
        <!-- END PAGE HEADER -->
    </div>

    <div class="col-xs-12 col-md-10 col-lg-8">
        <!-- BEGIN PAGE CONTENT-->
            <div><h4>@Html.DisplayNameFor(model => model.title):<span>@ViewBag.meet.title</span></h4></div>

            <div><h4>@Html.DisplayNameFor(model => model.description):<span>@ViewBag.meet.description</span></h4></div>
            
            <div>与会人员</div>
        
            <table class="table text-center">
                <thead>
                    <tr><td>姓名</td><td>签到情况</td></tr>
                </thead>
                
                @foreach (var user in ViewBag.users)
            {
                    <tr>
                        <td>@user.username</td>
                        <td>
                            @if (user.signin_status == "1")
                            {
                                siginCount++;
                                <span style="color:green">已签到</span>
                                    }
                                    else
                                    {
                                unsiginCount++;
                                <span style="color:red">未签到</span>
                            }
                        </td>
                    </tr>
                }
            </table>
            
        <div id="meet_chart" data-sigin="@siginCount" data-unsigin="@unsiginCount" style="width: 600px;height:400px;"></div>

        <!-- END PAGE CONTENT-->
    </div>
</div>

