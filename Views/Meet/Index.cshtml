@model IEnumerable<MVC4.Models.Meet>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-header">
        <h2>
            会议管理
        </h2>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>标题</th>
                <th>内容</th>
                <th>会议时间</th>
                <th>创建时间</th>
                <th style="width:250px;" class="text-center">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meet in Model)
            {
            <tr>
                <td>@meet.id</td>
                <td>@meet.title</td>
                <td>@meet.description</td>
                <td>@meet.begin_at</td>
                <td>@meet.created_at</td>
                <td class="text-center">
                    <a class="btn btn-success btn-xs" href="/Meet/Show/@meet.id">
                        <i class="fa fa-book fa-fw"></i>
                        查看
                    </a>
                    <a class="btn btn-primary btn-xs btn-edit"
                       href="/Meet/Edit/@meet.id">
                        <i class="fa fa-edit fa-fw"></i>
                        编辑
                    </a>
                    <a target="_blank" class="btn btn-warning btn-xs btn-edit"
                       href="/Signin/ShowForm/@meet.id">
                        <i class="fa fa-edit fa-fw"></i>
                        签到
                    </a>
                    <button class="btn btn-danger btn-xs btn-delete"
                            data-url="/Meet/Delete/@meet.id">
                        <i class="fa fa-trash fa-fw"></i>
                        删除
                    </button>
                </td>

            </tr>
            }
        </tbody>
    </table>
</div>